<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" >
        <layer-list>
            <item android:gravity="center_vertical" android:width="16dp" android:height="16dp">
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <stroke android:color="@color/unuse_font" android:width="1dp"/>
                    <size android:width="16dp" android:height="16dp"/>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
            <item android:gravity="right" >
                <shape android:shape="rectangle">
                    <solid android:color="@color/transparent"/>
                </shape>

            </item>
        </layer-list>

    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center_vertical"
                android:drawable="@drawable/ic_checkbox_checked"
                android:width="16dp" android:height="16dp"/>
            <item android:gravity="right">
                <shape android:shape="rectangle">
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
        </layer-list>


    </item>


</selector>