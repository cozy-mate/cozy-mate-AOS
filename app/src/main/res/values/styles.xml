    <!-- Chip 스타일 -->
    <style name="CustomChip_12">
        <item name="android:background">@drawable/btn_rectangle_12</item>
        <item name="android:backgroundTint">@color/color_box</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
