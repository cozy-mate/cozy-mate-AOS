<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_AddRoleText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="담당자를 선택해주세요"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        android:textColor="@color/basic_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_AddRoleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="역할을 입력해주세요"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        android:textColor="@color/basic_font"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_AddRoleText1"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_InputRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_inputbox"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:textColorHint="@color/unuse_font"
        android:hint="역할을 입력해주세요"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_AddRoleText2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_AddRoleText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정해진 요일이 있다면 선택해주세요"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        android:textColor="@color/basic_font"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/et_InputRole"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_AddRoleText3"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="월"
            android:textAppearance="@style/TextAppearance.App.12sp.Medium"
            android:textColor="@color/unuse_font"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_circle"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="화"
            android:textAppearance="@style/TextAppearance.App.12sp.Medium"
            android:textColor="@color/unuse_font"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_circle"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="수"
            android:textAppearance="@style/TextAppearance.App.12sp.Medium"
            android:textColor="@color/unuse_font"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_circle"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="목"
            android:textAppearance="@style/TextAppearance.App.12sp.Medium"
            android:textColor="@color/unuse_font"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_circle"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="금"
            android:textAppearance="@style/TextAppearance.App.12sp.Medium"
            android:textColor="@color/unuse_font"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_circle"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="토"
            android:textAppearance="@style/TextAppearance.App.12sp.Medium"
            android:textColor="@color/unuse_font"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_circle"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="일"
            android:textAppearance="@style/TextAppearance.App.12sp.Medium"
            android:textColor="@color/unuse_font"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_circle"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>