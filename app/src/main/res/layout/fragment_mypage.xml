<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/iv_MypageCharacter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_basic_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/iv_MypageUserName"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="델로"
         android:textAppearance="@style/TextAppearance.App.18sp.SemiBold"
        android:textColor="@color/highlight_font"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_MypageCharacter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@id/iv_MypageUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="나의 코지룸"
            android:gravity="center_vertical"
            android:textColor="@color/highlight_font"/>
        <View
            android:layout_width="match_parentdp"
            android:layout_height="0dp"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_home"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="피그말리온"
            android:gravity="center_vertical"
            android:textColor="@color/main_blue"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/ic_back"/>

    </LinearLayout>

    
</androidx.constraintlayout.widget.ConstraintLayout>