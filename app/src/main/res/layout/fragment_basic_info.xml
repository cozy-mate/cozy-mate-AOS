<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_dormitory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="55dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_dormitory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기숙사 합격 여부를 선택해주세요"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/highlight_font"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ly_dormitory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dormitory">

                    <TextView
                        android:id="@+id/dormitory_pass"
                        style="@style/OptionBox"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:text="합격" />

                    <TextView
                        android:id="@+id/dormitory_waiting"
                        style="@style/OptionBox"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:text="대기중" />

                    <TextView
                        android:id="@+id/dormitory_number"
                        style="@style/OptionBox"
                        android:layout_width="148dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:text="예비번호를 받았어요!" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_dormitory" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="55dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_dormitory">

                <TextView
                    android:id="@+id/tv_people_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신청실의 인원을 선택해주세요"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/highlight_font"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ly_people_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_people_number">

                    <TextView
                        android:id="@+id/num2"
                        style="@style/OptionBox"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:text="2명" />

                    <TextView
                        android:id="@+id/num3"
                        style="@style/OptionBox"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:text="3명" />

                    <TextView
                        android:id="@+id/num4"
                        style="@style/OptionBox"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:text="4명" />

                    <TextView
                        android:id="@+id/num5"
                        style="@style/OptionBox"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:text="5명" />

                    <TextView
                        android:id="@+id/num6"
                        style="@style/OptionBox"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:text="6명" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_people_number" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_people_number">

                <TextView
                    android:id="@+id/tv_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학과를 입력헤주세요"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/highlight_font"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvil_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/tv_major">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_major"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edittext"
                        android:hint="ex. 경영학과"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                        android:textColor="@color/basic_font" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvil_major" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="학번을 입력해주세요"
                android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                android:textColor="@color/highlight_font"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_major" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvil_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tv_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:hint="ex. 23"
                    android:inputType="text"
                    android:maxLength="4"
                    android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                    android:textColor="@color/basic_font" />
                />
            </com.google.android.material.textfield.TextInputLayout>

