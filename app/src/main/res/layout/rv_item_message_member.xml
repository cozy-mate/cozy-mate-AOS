<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:paddingVertical="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_message_member_character"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_basic_character1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_message_member_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="name"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/color_font"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_message_member_character"/>
    <TextView
        android:id="@+id/tv_message_member_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text message"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_message_member_character"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>