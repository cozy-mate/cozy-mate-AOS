<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="40dp"
    android:layout_margin="8dp"
    >
    <TextView
        android:id="@+id/tv_RuleNum"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_rule_number"
        android:text="1"
        android:gravity="center"
        android:layout_margin="8dp"
        android:textAppearance="@style/TextAppearance.App.12sp.Medium"
        android:textColor="@color/basic_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_Rule"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="규칙입니다."
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_RuleNum"
        />
    <TextView
        android:id="@+id/tv_Memo"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:text="memo"
        android:textAppearance="@style/TextAppearance.App.10sp.Medium"
        android:textColor="@color/unuse_font"
        app:layout_constraintTop_toBottomOf="@id/tv_Rule"
        app:layout_constraintStart_toStartOf="@id/tv_Rule"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>
