<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toEndOf="@+id/main"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/main"
            android:background="@drawable/custom_background_roommate_detail_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_table_age_room"
                style="@style/RvOtherUserInfoBox"
                android:layout_width="74dp"
                android:layout_height="18dp"
                android:layout_marginTop="15dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="23살 | 4인실" />

            <ImageView
                android:id="@+id/iv_table_user_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_basic_character2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_table_age_room" />

            <TextView
                android:id="@+id/tv_table_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="더기"
                android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
                android:textColor="@color/basic_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_table_user_profile" />

            <TextView
                android:id="@+id/tv_table_user_match_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99%"
                android:textAppearance="@style/TextAppearance.App.12sp.Medium"
                android:textColor="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_table_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>