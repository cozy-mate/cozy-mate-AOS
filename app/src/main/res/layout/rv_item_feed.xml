<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_rectangle_12"
    android:padding="16dp"
    android:layout_marginVertical="8dp">
    <ImageView
        android:id="@+id/iv_feed_peresona"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/character_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_feed_nickname"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="델로"
        android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
        android:textColor="@color/highlight_font"
        android:gravity="center"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/iv_feed_peresona"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_feed_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test\ntest\ntest"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/color_font"
        android:paddingHorizontal="4dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/iv_feed_peresona"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="5"
        android:textAppearance="@style/TextAppearance.App.12sp.Regular"
        android:textColor="@color/unuse_font"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_feed_text"
        app:layout_constraintStart_toStartOf="parent"/>

    


</androidx.constraintlayout.widget.ConstraintLayout>