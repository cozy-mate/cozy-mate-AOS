<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.roommate.RoommateEssentialInfoActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:id="@+id/iv_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="필수정보"
        android:textColor="@color/basic_font"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:id="@+id/pb_essential"
        android:progress="66"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progress_bar_state_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        android:layout_marginTop="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_test"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_rectangle_6_sub_blue"
        android:text="다음"
        android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
        android:textColor="@color/main_blue"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pb_essential"
        android:layout_marginTop="55dp"
        tools:layout_editor_absoluteX="0dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_wakeup_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="기상기산을 선택해주세요"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/basic_font"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cy_wake_ampm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wakeup_time"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:id="@+id/tv_wake_am"
                        android:textColor="@color/unuse_font"
                        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        app:layout_constraintStart_toEndOf="@id/tv_wake_am"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/wake_guide_line"
                        android:layout_marginStart="20dp"
                        android:background="@color/unuse_font"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM"
                        android:id="@+id/tv_wake_pm"
                        android:textColor="@color/unuse_font"
                        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@+id/wake_guide_line"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cy_wake_time_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cy_wake_ampm"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_wakeup_1"
                        style="@style/OptionBox"
                        android:text="1"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_2"
                        style="@style/OptionBox"
                        android:text="2"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_3"
                        style="@style/OptionBox"
                        android:text="3"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_4"
                        style="@style/OptionBox"
                        android:text="4"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_5"
                        style="@style/OptionBox"
                        android:text="5"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_6"
                        style="@style/OptionBox"
                        android:text="6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cy_wake_time_7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cy_wake_time_1"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_wakeup_7"
                        style="@style/OptionBox"
                        android:text="7"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_8"
                        style="@style/OptionBox"
                        android:text="8"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_9"
                        style="@style/OptionBox"
                        android:text="9"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_10"
                        style="@style/OptionBox"
                        android:text="10"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_11"
                        style="@style/OptionBox"
                        android:text="11"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_12"
                        style="@style/OptionBox"
                        android:text="12"/>
                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sleep_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cy_wake_time_7"
                android:text="취침시간을 선택해주세요"
                android:layout_marginTop="55dp"
                android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                android:textColor="@color/basic_font"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cy_sleep_ampm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sleep_time"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:id="@+id/tv_sleep_am"
                    android:textColor="@color/unuse_font"
                    android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="14dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toEndOf="@id/tv_sleep_am"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/sleep_guide_line"
                    android:layout_marginStart="20dp"
                    android:background="@color/unuse_font"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:id="@+id/tv_sleep_pm"
                    android:textColor="@color/unuse_font"
                    android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@+id/sleep_guide_line"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cy_sleep_time_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cy_sleep_ampm"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_sleep_1"
                        style="@style/OptionBox"
                        android:text="1"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_2"
                        style="@style/OptionBox"
                        android:text="2"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_3"
                        style="@style/OptionBox"
                        android:text="3"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_4"
                        style="@style/OptionBox"
                        android:text="4"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_5"
                        style="@style/OptionBox"
                        android:text="5"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_6"
                        style="@style/OptionBox"
                        android:text="6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cy_sleep_time_7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cy_sleep_time_1"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_sleep_7"
                        style="@style/OptionBox"
                        android:text="7"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_8"
                        style="@style/OptionBox"
                        android:text="8"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_9"
                        style="@style/OptionBox"
                        android:text="9"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_10"
                        style="@style/OptionBox"
                        android:text="10"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_11"
                        style="@style/OptionBox"
                        android:text="11"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_12"
                        style="@style/OptionBox"
                        android:text="12"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>