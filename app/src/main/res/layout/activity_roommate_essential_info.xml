<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.roommate.RoommateEssentialInfoActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:id="@+id/iv_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="필수정보"
        android:textColor="@color/basic_font"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:id="@+id/pb_essential"
        android:progress="66"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progress_bar_state_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        android:layout_marginTop="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_test"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_rectangle_6_sub_blue"
        android:text="다음"
        android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
        android:textColor="@color/main_blue"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pb_essential"
        android:layout_marginTop="55dp"
        tools:layout_editor_absoluteX="0dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_wakeup_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="기상기산을 선택해주세요"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/basic_font"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cy_wake_ampm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wakeup_time"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:id="@+id/tv_wake_am"
                        android:textColor="@color/unuse_font"
                        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        app:layout_constraintStart_toEndOf="@id/tv_wake_am"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/wake_guide_line"
                        android:layout_marginStart="20dp"
                        android:background="@color/unuse_font"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM"
                        android:id="@+id/tv_wake_pm"
                        android:textColor="@color/unuse_font"
                        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@+id/wake_guide_line"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_wake_time_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cy_wake_ampm"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_wakeup_1"
                        style="@style/OptionBox"
                        android:text="1"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_2"
                        style="@style/OptionBox"
                        android:text="2"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_3"
                        style="@style/OptionBox"
                        android:text="3"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_4"
                        style="@style/OptionBox"
                        android:text="4"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_5"
                        style="@style/OptionBox"
                        android:text="5"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_6"
                        style="@style/OptionBox"
                        android:text="6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_wake_time_7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_wake_time_1"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_wakeup_7"
                        style="@style/OptionBox"
                        android:text="7"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_8"
                        style="@style/OptionBox"
                        android:text="8"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_9"
                        style="@style/OptionBox"
                        android:text="9"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_10"
                        style="@style/OptionBox"
                        android:text="10"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_11"
                        style="@style/OptionBox"
                        android:text="11"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_wakeup_12"
                        style="@style/OptionBox"
                        android:text="12"/>
                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sleep_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ly_wake_time_7"
                android:text="취침시간을 선택해주세요"
                android:layout_marginTop="55dp"
                android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                android:textColor="@color/basic_font"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cy_sleep_ampm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sleep_time"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:id="@+id/tv_sleep_am"
                    android:textColor="@color/unuse_font"
                    android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="14dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toEndOf="@id/tv_sleep_am"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/sleep_guide_line"
                    android:layout_marginStart="20dp"
                    android:background="@color/unuse_font"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:id="@+id/tv_sleep_pm"
                    android:textColor="@color/unuse_font"
                    android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@+id/sleep_guide_line"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_sleep_time_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cy_sleep_ampm"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_sleep_1"
                        style="@style/OptionBox"
                        android:text="1"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_2"
                        style="@style/OptionBox"
                        android:text="2"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_3"
                        style="@style/OptionBox"
                        android:text="3"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_4"
                        style="@style/OptionBox"
                        android:text="4"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_5"
                        style="@style/OptionBox"
                        android:text="5"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_6"
                        style="@style/OptionBox"
                        android:text="6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_sleep_time_7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_sleep_time_1"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_sleep_7"
                        style="@style/OptionBox"
                        android:text="7"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_8"
                        style="@style/OptionBox"
                        android:text="8"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_9"
                        style="@style/OptionBox"
                        android:text="9"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_10"
                        style="@style/OptionBox"
                        android:text="10"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_11"
                        style="@style/OptionBox"
                        android:text="11"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_sleep_12"
                        style="@style/OptionBox"
                        android:text="12"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_light_off_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_sleep_time_7"
                    android:text="소등시간을 선택해주세요"
                    android:layout_marginTop="55dp"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/basic_font"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cy_light_off_ampm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_light_off_time"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:id="@+id/tv_light_off_am"
                        android:textColor="@color/unuse_font"
                        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="14dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        app:layout_constraintStart_toEndOf="@id/tv_light_off_am"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/light_off_guide_line"
                        android:layout_marginStart="20dp"
                        android:background="@color/unuse_font"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM"
                        android:id="@+id/tv_light_off_pm"
                        android:textColor="@color/unuse_font"
                        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@+id/light_off_guide_line"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_light_off_time_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cy_light_off_ampm"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_light_off_1"
                        style="@style/OptionBox"
                        android:text="1"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_2"
                        style="@style/OptionBox"
                        android:text="2"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_3"
                        style="@style/OptionBox"
                        android:text="3"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_4"
                        style="@style/OptionBox"
                        android:text="4"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_5"
                        style="@style/OptionBox"
                        android:text="5"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_6"
                        style="@style/OptionBox"
                        android:text="6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_light_off_time_7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_light_off_time_1"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_light_off_7"
                        style="@style/OptionBox"
                        android:text="7"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_8"
                        style="@style/OptionBox"
                        android:text="8"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_9"
                        style="@style/OptionBox"
                        android:text="9"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_10"
                        style="@style/OptionBox"
                        android:text="10"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_11"
                        style="@style/OptionBox"
                        android:text="11"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/tv_light_off_12"
                        style="@style/OptionBox"
                        android:text="12"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_smoke_check"
                    android:layout_marginTop="55dp"
                    android:text="흡연여부를 선택해주세요"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/basic_font"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_light_off_time_7"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_smoke_check"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_smoke_check"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/smoke_no"
                        style="@style/OptionBox"
                        android:text="X"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/smoke_paper"
                        style="@style/OptionBox"
                        android:text="연초"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/smoke_eletronic"
                        style="@style/OptionBox"
                        android:text="전자담배"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/smoke_stopping"
                        style="@style/OptionBox"
                        android:text="끊는 중이에요"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_sleep_habbit_check"
                    android:layout_marginTop="55dp"
                    android:text="잠버릇을 선택해주세요"
                    android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
                    android:textColor="@color/basic_font"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ly_smoke_check"
                    />
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ly_sleep_habbit_check"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sleep_habbit_check"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:id="@+id/sleep_habit_no"
                        style="@style/OptionBox"
                        android:text="X"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:id="@+id/sleep_habit_move"
                        style="@style/OptionBox"
                        android:text="잠꼬대"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:id="@+id/sleep_habit_noise"
                        style="@style/OptionBox"
                        android:text="코골이"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:id="@+id/sleep_habit_teeth"
                        style="@style/OptionBox"
                        android:text="이갈이"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:id="@+id/sleep_habit_move_sick"
                        style="@style/OptionBox"
                        android:text="몽유병"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ac_check"
                    android:layout_marginTop="55dp"
                    android:text="에어컨 강도를 선택해주세요"
