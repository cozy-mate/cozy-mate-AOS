<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cl_table_basic_info"
        android:background="@drawable/custom_background_roommate_detail_12"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_table_name_title"
            android:text="이름"
            android:textAppearance="@style/TextAppearance.App.14sp.Medium"
            android:textColor="@color/color_font"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_table_name_title"
            android:background="@color/detail_gray"
            android:layout_marginTop="15dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>