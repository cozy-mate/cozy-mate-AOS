<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="82dp"
    android:layout_marginTop="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="name"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/color_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text message"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message_name"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24.07.30 | 20:26"
        android:textAppearance="@style/TextAppearance.App.12sp.Regular"
        android:textColor="@color/unuse_font"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message_text"
        app:layout_constraintBottom_toTopOf="@id/iv_line"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F2F4"
        app:layout_constraintTop_toBottomOf="@id/tv_message_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>