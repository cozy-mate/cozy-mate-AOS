<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_AddRuleText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="규칙을 입력해주세요"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        android:textColor="@color/basic_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_InputRule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_inputbox"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:textColorHint="@color/unuse_font"
        android:hint="규칙을 입력해주세요"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_AddRuleText1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_AddRuleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모를 추가해주세요!"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        android:textColor="@color/basic_font"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/et_InputRule"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택)"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        android:textColor="@color/unuse_font"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/tv_AddRuleText2"
        app:layout_constraintStart_toEndOf="@id/tv_AddRuleText2"/>

    <EditText
        android:id="@+id/et_InputMemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="258dp"
        android:background="@drawable/ic_inputbox"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:textColorHint="@color/unuse_font"
        android:gravity="top"
        android:hint="내용을 입력해주세요"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_AddRuleText2"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>